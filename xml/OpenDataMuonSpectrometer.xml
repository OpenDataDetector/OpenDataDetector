<lccdd>

	<display>
		<vis name="MuonBarrelVis" alpha="0.5" r="0.0" g="0.0" b="0.5" showDaughters="true" visible="true"/>
		<vis name="MuonLayerVis" alpha="0.5" r="0.0" g="0.0" b="0.5" showDaughters="true" visible="true"/>
        <vis name="MuonTubeVis" alpha="0.5" r="1." g="0.0" b="0.0" showDaughters="true" visible="true"/>
	</display>

	<detectors>
		<!-- Barrel -->
		<detector id="ODD_MuonSpectroMeterBarrel_ID" name="MuonSpectrometerBarrel" type="ODDMuonBarrel" vis="MuonBarrelVis">
			 <type_flags type="DetType_MUON +  DetType_BARREL"/>
			 <dimensions name="MuonSpectrometerBarrelShape" rmin="ms_b_rmin" rmax="ms_b_rmax" dz="ms_b_dz" z="0.*m"/>

			 <layer id="0" name="Layer_Cylinder_Inner" rmin="ms_b_rmin" dz="ms_b_dz_inner" z="0.*mm" nphi="16" nz="3" vis="MuonLayerVis" dim_z="0"/>
			 <layer id="1" name="Layer_Cylinder_Middle" rmin="ms_b_rmin" dz="ms_b_dz_middle" z="0." nphi="16" nz="4" vis="MuonLayerVis" dim_z="30"/>
			 <layer id="2" name="Layer_Cylinder_Outer" rmin="ms_b_rmin" dz="ms_b_dz_outer" z="0." nphi="16" nz="5" vis="MuonLayerVis" dim_z="60"/>

			 	<chamber name="MDT_Chamber" dx="1550.*mm" dy="225.*mm" dz="650.*mm" x="0." z="2.*m" vis="bluetrans">
			 		<multilayer name="MultiLayerBarrel_Inner" vis="yellow">
			 			<layer repeat="3"/>
                    <tubs name="MDT_Tube" repeat="30" rmin="10*mm" rmax="15*mm" startphi="0.0*deg" deltaphi="360.*deg" vis="MuonTubeVis" material="Aluminium"/>
                    </multilayer>
               
			 	</chamber>
			 </layer>
		</detector>
	</detectors>

</lccdd>

