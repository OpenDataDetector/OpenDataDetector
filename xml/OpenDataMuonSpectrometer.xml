<lccdd>

	<display>
		<vis name="MuonBarrelVis" alpha="0.5" r="0.0" g="0.0" b="0.5" showDaughters="true" visible="true"/>
		<vis name="MuonChamberVis" alpha="0.5" r="0.0" g="0.0" b="0.5" showDaughters="true" visible="true"/>
