			 	<chamber  dx="775.*mm" dy="112.5*mm" dz="325.*mm" x="0." z="2.*m" vis="MuonChamberVis">
			 		<multilayer name="MultiLayerBarrel_Inner" vis="yellow">
			 			<layer repeat="3"/>
                    <tubs name="MDT_Tube" rmin1="10*mm" rmax1="15*mm" rmin2="5.*mm" rmax2="7.5*mm" startphi="0.0*deg" deltaphi="360.*deg" vis="MuonTubeVis" material="Aluminium"/>
